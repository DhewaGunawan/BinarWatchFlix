<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue_600"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_initial_name"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardBackgroundColor="@color/dark_blue_200"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_message"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_initial_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/off_white_400"
            tools:text="A" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_message_dark"
        android:maxWidth="250dp"
        android:padding="10dp"
        android:textColor="@color/off_white_400"
        app:layout_constraintLeft_toRightOf="@+id/cv_initial_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Menghitung hari detik demi detik" />

</androidx.constraintlayout.widget.ConstraintLayout>